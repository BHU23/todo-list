<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-3xl font-bold mb-4"><%= @task.title %></h2>
  
  <p class="text-lg mb-2">
    <strong class="font-medium">คำอธิบาย:</strong> <%= @task.description %>
  </p>

  <p class="text-lg mb-2">
    <strong class="font-medium">ตำแหน่ง:</strong> <%= @task.position %>
  </p>

  <p class="text-lg mb-2">
    <strong class="font-medium">Email:</strong> <%= @task.email %>
  </p>

  <p class="text-lg mb-2">
    <strong class="font-medium">เวลาที่จะทำ:</strong> <%= @task.todo_time.strftime("%Y-%m-%d %H:%M") if @task.todo_time %>
  </p>

  <p class="text-lg mb-4">
    <strong class="font-medium">สถานะ:</strong> <%= @task.completed ? "เสร็จแล้ว" : "ยังไม่เสร็จ" %>
  </p> 

  <%= link_to 'กลับไปที่รายการ', tasks_path, class: "text-blue-500 hover:underline" %>
</div>
